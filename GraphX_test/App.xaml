<Application x:Class="GraphX_test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GraphX_test"
             xmlns:glx="http://schemas.panthernet.ru/graphx/"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type  glx:VertexControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type glx:VertexControl}">
                        <local:MyVertexControl DataContext="{Binding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
